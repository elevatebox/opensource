<body>
    <header>
        <h1>Best Travel Deals Finder</h1>
        <p>Find the best prices on flights, hotels, and more</p>
    </header>

    <div class="container">
        <div class="search-section">
            <input type="text" id="destination" placeholder="Enter destination">
            <input type="date" id="departure-date">
            <input type="date" id="return-date">
            <button onclick="findDeals()">Find Deals</button>
        </div>

        <div class="results-section" id="results"></div>
    </div>

    <script>
        // Mock data for flight and hotel results
        const mockFlights = [
            { airline: "Airline A", price: 250, departure: "10:00 AM", arrival: "2:00 PM", url: "https://example.com" },
            { airline: "Airline B", price: 300, departure: "12:00 PM", arrival: "4:00 PM", url: "https://example.com" },
            { airline: "Airline C", price: 200, departure: "6:00 AM", arrival: "10:00 AM", url: "https://example.com" }
        ];

        const mockHotels = [
            { name: "Hotel Paradise", price: 150, rating: 4.5, location: "Downtown", image: "https://via.placeholder.com/200" },
            { name: "Luxury Inn", price: 200, rating: 4.0, location: "Beachfront", image: "https://via.placeholder.com/200" },
            { name: "Budget Stay", price: 80, rating: 3.5, location: "City Center", image: "https://via.placeholder.com/200" }
        ];

        function findDeals() {
            // Get user inputs
            const destination = document.getElementById("destination").value;
            const departureDate = document.getElementById("departure-date").value;
            const returnDate = document.getElementById("return-date").value;

            // Simple validation
            if (!destination || !departureDate || !returnDate) {
                alert("Please fill in all fields");
                return;
            }

            // Clear any previous results
            document.getElementById("results").innerHTML = "";

            // Display flight results
            let flightResults = "<h2>Flights to " + destination + ":</h2>";
            mockFlights.forEach(flight => {
                flightResults += `
                    <div class="result-card">
                        <h3>${flight.airline}</h3>
                        <p>Departure: ${flight.departure} | Arrival: ${flight.arrival}</p>
                        <p class="price">$${flight.price}</p>
                        <a href="${flight.url}" target="_blank">Book Now</a>
                    </div>
                `;
            });

            // Display hotel results
            let hotelResults = "<h2>Hotels in " + destination + ":</h2>";
            mockHotels.forEach(hotel => {
                hotelResults += `
                    <div class="result-card">
                        <img src="${hotel.image}" alt="${hotel.name}">
                        <h3>${hotel.name}</h3>
                        <p>Location: ${hotel.location} | Rating: ${hotel.rating}</p>
                        <p class="price">$${hotel.price} per night</p>
                        <a href="https://example.com" target="_blank">Book Now</a>
                    </div>
                `;
            });

            // Append results to the DOM
            document.getElementById("results").innerHTML = flightResults + hotelResults;
        }
    </script>
</body>
