    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        header {
            background-color: #007bff;
            padding: 20px;
            text-align: center;
            color: white;
        }
        .container {
            width: 80%;
            margin: 20px auto;
        }
        .search-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }
        .search-section input, .search-section select {
            padding: 10px;
            font-size: 16px;
            width: 30%;
        }
        .search-section button {
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        .search-section button:hover {
            background-color: #218838;
        }
        .results-section {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }
        .result-card {
            background-color: white;
            padding: 20px;
